# Environment variables example for development
# Copy to .env and fill values for local development

# App
NODE_ENV=development
APP_PORT=4000
METRICS_SECRET=dev-metrics-secret

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/vivaform_dev?schema=public

# Prisma
ADMIN_SEED_ENABLE=0
ADMIN_SEED_EMAIL=admin@example.com
ADMIN_SEED_PASSWORD=changeme
ADMIN_SEED_NAME=Admin

# Sentry (optional)
SENTRY_DSN=
SENTRY_PROFILING=0

# Email (choose service: sendgrid or smtp)
EMAIL_SERVICE=smtp
SENDGRID_API_KEY=
SMTP_USER=
SMTP_PASSWORD=

# Stripe
STRIPE_SECRET=

# Cookies / JWT
JWT_SECRET=supersecret
JWT_EXPIRES_IN=3600

# Frontend
VITE_API_BASE_URL=http://localhost:4000


