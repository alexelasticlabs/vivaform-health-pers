# Backend environment for local development
NODE_ENV=development
APP_PORT=4000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vivaform_dev?schema=public

# Admin seed (optional)
ADMIN_SEED_ENABLE=0

# JWT
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=86400

# Email (для dev можно использовать SMTP mock или оставить пустым)
EMAIL_SERVICE=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# Sentry (optional)
SENTRY_DSN=
SENTRY_PROFILING=0

# Metrics
METRICS_SECRET=dev-metrics-secret

# CORS origins (comma-separated or JSON array)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Stripe (optional for dev)
STRIPE_SECRET=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

