# API базовый URL backend
VITE_API_URL="http://localhost:4000"
# Публичный ключ Stripe (test mode)
VITE_STRIPE_PUBLIC_KEY="pk_test_your_key_here"

# --- Monitoring ---
# Sentry DSN для мониторинга ошибок (опционально, но рекомендуется для прод)
VITE_SENTRY_DSN="https://<key>@sentry.io/<project>"

# --- Marketing Pixels ---
# Идентификаторы пикселей (если не заданы, пиксели не инициализируются)
VITE_META_PIXEL_ID=""
VITE_GOOGLE_ADS_ID=""

# --- Product Analytics ---
# Провайдер продуктовой аналитики: beacon|fetch|amplitude|posthog
VITE_PRODUCT_ANALYTICS_PROVIDER="beacon"
# Endpoint для beacon/fetch (если не задан, в DEV будут только debug-логи при включенном consent.analytics)
VITE_PRODUCT_ANALYTICS_ENDPOINT=""
# Для Amplitude
VITE_AMPLITUDE_API_KEY=""
# Для PostHog
VITE_POSTHOG_KEY=""
VITE_POSTHOG_HOST="https://us.posthog.com"

# --- DEV flags ---
# Включить React Buddy DevToolbox в DEV
VITE_DEV_TOOLBOX="0"
# Принудительно мокаем /auth, /subscriptions, /quiz в DEV
VITE_API_MOCKS="0"
# Авто включение моков при недоступном бэке (DEV). По умолчанию включено (1). 0 — выключить.
VITE_AUTO_AUTH_MOCKS="1"
# Приглушить dev-логи аналитики/моков
VITE_SILENCE_ANALYTICS_LOGS="0"
VITE_SILENCE_MOCK_LOGS="0"

# Дополнительно можно задать:
# VITE_FEATURE_FLAGS="premium,beta"
